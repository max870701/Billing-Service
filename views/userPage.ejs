<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= data.name %></title>
    <link rel="stylesheet" type="text/css" href="/stylesheets/basic-table.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/bootstrap.min.css">
  </head>
  <body>
    <table>
      <tr>
        <td>User ID</td>
        <td><%= data.id %></td>
      </tr>
      <tr>
        <td>User Name</td>
        <td><%= data.name %></td>
      </tr>
      <tr>
        <td>Current Balance</td>
        <td><%= data.current_balance %></td>
      </tr>
      <tr>
        <td>Date</td>
        <td><%= data.time %></td>
      </tr>
      <tr>
    </table>
    <br>
    <table>
      <thead>
        <tr>
          <th>Service Type</th>
	  <th>Previous Balance</th>
	  <th>Change Amount</th>
	  <th>Current Balance</th>
	  <th>Date</th>
        </tr>
      </thead>
      <tbody>
        <% records.reverse().forEach(function(records) { %>
          <tr>
            <td><%= records.service_type %></td>
            <td><%= records.previous_balance %></td>
            <td><%= records.change_amount %></td>
            <td><%= records.current_balance %></td>
            <td><%= records.time %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
    <br>
    <a href="/users" class="btn btn-primary">Go back to users page</a>
  </body>
</html>
